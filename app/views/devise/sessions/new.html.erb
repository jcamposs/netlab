<div class="navbar navbar-fixed-top">

  <ul id="form_sign-in" class="nav pull-right">

  </ul>

</div>

<div class="container-fluid">

  <div class="row-fluid">

    <div id="logo" class="span6">
      <center><h2>Free Network Simulator Machines</h2></center><br /><br />
      <%= image_tag("logo.png") %>
    </div>

    <div id="form-register" class="span4 offset2">

	    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-inline"}) do |f| %>
	      

	      <div id="links">

		<%- if devise_mapping.omniauthable? %>
		  <%- resource_class.omniauth_providers.each do |provider| %>
		    <!--<a href='#<%= "#{provider.to_s}" %>' role="button" class="btn btn-primary" data-toggle="modal"><%= "Sign in with #{provider.to_s.titleize}" %></a> 
		    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />-->
		    <a href='#' onclick="js:login('<%= omniauth_authorize_path(resource_name, provider) %>', '<%= "#{request.protocol}#{request.host_with_port}" %>', '<%= "#{request.protocol}#{request.host_with_port}" %>');" class="btn"><%= "Sign in with #{provider.to_s.titleize}" %></a>
		  <% end -%>
		<% end -%>
	      <div>
	    <% end %>
	    <%= render :file => "devise/registrations/new" %>
    </div>

  </div>

</div>


