<h1>Listing workspaces</h1>

<br/>
<br/>
<br/>
<br/>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Scene</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @workspaces.each do |workspace| %>
  <tr>
    <td><%= workspace.name %></td>
    <td><%= workspace.user.first_name %></td>
    <td><%= workspace.scene.name %></td>
    <td><%= link_to 'Show', workspace %></td>
    <td><%= link_to 'Manage', manage_workspace_path(workspace) %></td>
    <% if @user.id == workspace.user.id %>
    <td><%= link_to 'Edit', edit_workspace_path(workspace) %></td>
    <td><%= link_to 'Destroy', workspace, confirm: 'Are you sure?', method: :delete %></td>
    <% else %>
    <td><%= link_to 'Leave', workspace, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

