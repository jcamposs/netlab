<%= javascript_tag do %>

ConsoleControler = (function () {
  var module = {};
  var console = null;

  module.manageConsole = function(conf) {
    var vm_name = conf["name"];
    var url = "http://" + conf["host"] + ":" + conf["port"];

    var html_code = '<iframe src="' + url + '" frameborder="1" width="720" height="500"></iframe>';

    $("#" + vm_name + " div.container").html(html_code);

    if (console) {
      $("#" + console).hide("blind", null, 1000, function() {
        $("#" + vm_name).show("blind", null, 1000, null);
      });
    } else
      $("#" + vm_name).show("fold", null, 1000, null);

    console = vm_name;
  };

  return module;

}());

<% end %>
