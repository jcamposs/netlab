(function () {

  var virtual_machine = $("#virtual_machine").val();

  $.ajax({
    url: '<%= stop_workspace_path(@workspace) %>',
    type: 'post',
    dataType: 'json',
    data: {
      '_method': 'put',
      'authenticity_token': '<%= form_authenticity_token %>',
      'virtual_machines': [ virtual_machine ]
    },
    error: function(msg) {
      alert("Something was wrong");
    }
  });

}());
