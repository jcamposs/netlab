<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @workspace.name %>
</p>

<%= hidden_field_tag 'workspace_scene_id', @workspace.scene.id %>

<%= render 'scenes/netwidget' %>

<%= label_tag "Virtual machine:" %>
<%= select_tag "virtual_machine", options_from_collection_for_select(VirtualMachine.find_all_by_workspace_id(@workspace.id), :name, :name) %>
<%= button_to "Manage", configure_workspace_path(@workspace), :remote => true %>

<div class="consoles">
  <% VirtualMachine.find_all_by_workspace_id(@workspace.id).each do |vm| %>
    <div id="<%= vm.name %>" class="ui-widget-content ui-corner-all" style="display: none">
      <h3 class="ui-widget-header ui-corner-all"><%= vm.name %></h3>
    </div>
  <% end %>
</div>

<%= link_to 'Back', workspaces_path %>