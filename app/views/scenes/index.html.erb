<% @scenes.each do |scene| %>
  <tr>
    <td><%= scene.user.first_name %></td>
    <td><%= scene.name %></td>
    <td><%= link_to 'Show', scene, :remote => true %></td>
    <td><%= link_to 'Edit', edit_scene_path(scene) %></td>
    <td><%= link_to 'Delete', delete_scene_path(scene), :remote => true %></td>
  </tr>
<% end %>
</table>

