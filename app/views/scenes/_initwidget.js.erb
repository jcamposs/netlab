<%= javascript_tag do %>

  function clearScene() {
    var widget = <%= @module %>.getWidget();
    var nodes = widget.getNodes();

    for(var i = 0; i < nodes.length; i++)
      widget.removeNode(nodes[i].name);
  };

  function loadStage(json) {
    if (!json)
      return;

    var widget = <%= @module %>.getWidget();
    Netlab.loadJSON(widget, json);
  };

  function initJSON() {
    $('#table_scenes input').each(function() {
      if ($(this).is(':checked')) {
        sceneId = $(this).attr('id');
        sceneValue = $(this).val();
        loadJSON(sceneId, sceneValue);
      }
    });

    <% if @scene.name %>
      <% if @mode == 'edit' %>
        <% if @scene.id %>
          sceneId = 'Editing ' + '<%= @scene.name %>';
        <% else %>
          sceneId = 'New Scene';
        <% end %>
      <% else %>
        sceneId = '<%= @scene.name %>';
      <% end %>
        sceneValue = '<%= @scene.id %>';
        loadJSON(sceneId, sceneValue);
    <% else %>
      $('#container').show();
      $('#spinner').hide();
      $('#scene_title').html('New Scene');
      loadStage("");
    <% end %>
  };

  function loadJSON(sceneId, sceneValue){
    $('#container').hide();
    $('#spinner').show();
    $.ajax({
      url: '/scenes/' + sceneValue + '?redirect_url=' + window.location.protocol + '//' + window.location.host + '/workspaces',
      dataType: 'json',
      success: function(data) {
        if(data.redirect){
          window.location.href = data.redirect;
        }else{
          $('#container').show();
          $('#spinner').hide();
          $('#scene_title').html(sceneId);
          loadStage(data.definition);
        }
      }
    })
  };

  function initSpinner() {
    $('#spinner').css('width', <%= @width %>);
    $('#spinner').css('height', <%= @height %>);
    $('#spinner').css('border', '1px solid #D4D4D4');
    var opts = {
      lines: 15,
      length: 20,
      width: 6,
      radius: 20,
      color: '#77D',
      speed: 2,
      top: 200,
      left: 250
    };
    new Spinner(opts).spin(document.getElementById('spinner'));
  };

  function initWidget() {
    $('#table_scenes input').bind('click', function() {
      $('#table_scenes input').attr('checked', false);
      $(this).attr('checked', true);
      $('#scene_title').html('Loading...');
      clearScene();
      loadJSON($(this).attr('id'), $(this).val());
    });

    <%= @module %>.initWidget({
      container: "container",
      width: <%= @width %>,
      height: <%= @height %>,
      mode: "<%= @mode %>",
      callback: initJSON,
    });
  };

  $(window).load( function() {
    initSpinner();
    initWidget();
  });

<% end %>
