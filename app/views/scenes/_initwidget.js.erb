<%= javascript_tag do %>

  function initStage() {
    var json = $("#scene_definition").val();

    if (!json)
      return;

    var widget = <%= @module %>.get<%= @widget %>();
    Netlab.loadJSON(widget, json);
  };

  $(window).load( function() {
    <%= @module %>.init<%= @widget %>({
      container: "container",
      width: 700,
      height: 600,
      callback: initStage
    });
  });

<% end %>
