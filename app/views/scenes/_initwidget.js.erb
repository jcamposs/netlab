<%= javascript_tag do %>

  function initStage() {
    var json = "<%=j @scene.definition.html_safe %>";

    if (!json)
      return;

    var widget = <%= @module %>.getWidget();
    Netlab.loadJSON(widget, json);
  };

  $(window).load( function() {
    <%= @module %>.initWidget({
      container: "container",
      width: 700,
      height: 600,
      editable: <%= @edit %>,
      runable: <%= @run %>,
      callback: initStage
    });
  });

<% end %>
