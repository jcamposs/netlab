<%= javascript_tag do %>

  function fillForm() {
    var name = "<%=@scene.name %>";
    name = prompt('Scene name:', name);

    if (name == null)
      return false;

    $("#scene_name").val(name);

    var widget = <%= @module %>.getWidget();

    $("#scene_definition").val(Netlab.saveJSON(widget));

    return true;
  };

<% end %>
