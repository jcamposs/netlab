<%= javascript_tag do %>

  function clearScene() {
    var widget = <%= @module %>.getWidget();
    var nodes = widget.getNodes();

    for(var i = 0; i < nodes.length; i++)
      widget.removeNode(nodes[i].name);
  };

  function fillForm() {
    var name = "<%=@scene.name %>";
    name = prompt('Scene name:', name);

    if (name == null)
      return false;

    $("#scene_name").val(name);

    var widget = <%= @module %>.getWidget();

    $("#scene_definition").val(Netlab.saveJSON(widget));

    return true;
  };

<% end %>
