<p id="notice"><%= notice %></p>

<p>
  <b>Author:</b>
  <%= @workspace_task.author.full_name %>
</p>

<p>
  <b>Assigned to:</b>
  <%= @workspace_task.assigned.full_name %>
</p>

<p>
  <b>Status:</b>
  <%= @workspace_task.get_status %>
</p>

<p>
  <b>Priority:</b>
  <%= @workspace_task.get_priority %>
</p>

<p>
  <b>Subject:</b>
  <%= @workspace_task.subject %>
</p>

<p>
  <b>Description:</b>
  <%= @workspace_task.description %>
</p>

<% if current_user == @workspace_task.author or current_user == @workspace_task.assigned %>
  <%= link_to 'Edit', edit_workspace_task_path(@workspace_task) %> |
<% end %>
<%= link_to 'Back', manage_workspace_path(@workspace_task.workspace) %>
