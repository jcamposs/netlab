<table id="table_tasks" class="table table-hover table-list">
  <thead>
    <tr>
      <th></th>
      <th>Assigned to</th>
      <th>Priority</th>
      <th>Subject</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% workspace.workspace_tasks.where("state < 4").each do |wtask| %>
      <tr>
        <td class="list-image"><i class="icon-tasks"></i></td>
        <td><%= "#{wtask.assigned.full_name}" %></td>
        <td><%= "#{wtask.get_priority}" %></td>
        <td><%= "#{wtask.subject}" %></td>
        <td><%= '<span class="minor">'.html_safe + ' On ' + ("#{wtask.created_at}").to_time.strftime("%B %d %Y %X") + '</span>'.html_safe %></td>
        <td>
          <% if not wtask.auto_task.nil? and current_user == wtask.assigned %>
            <%= link_to '<i class="icon-ok icon-white"></i> Ok'.html_safe, do_auto_task_workspace_task_path(wtask), method: :put, :class => 'btn btn-mini btn-success' %>
          <% else %>
            <%= link_to '<i class="icon-ok icon-white"></i> Show'.html_safe, wtask, :class => 'btn btn-mini btn-success' %>
          <% end %>
          <%= link_to '<i class="icon-remove icon-white"></i> Reject'.html_safe, wtask, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <a href='#newTaskModal' class='btn btn-primary pull-right' data-toggle="modal"><i class="icon-plus icon-white"></i> New task</a>
</div>

<div id="newTaskModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="newTaskModalHeader">New task</h3>
  </div>
  <div class="modal-body">
    <%= render partial: 'workspace_tasks/form', :locals => {:workspace_task => WorkspaceTask.new, :workspace => workspace} %>
  </div>
</div>
