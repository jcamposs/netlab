<div class="container-fluid">

  <div class="row-fluid">

    <div id="container-notifications" class="span6">

      <div class="navbar">
        <div class="navbar-inner">
          <a href="#" class="brand"><%= "#{@user.first_name}'s invitations" %></a>
          <span class="icon pull-right">
            <i class="icon-globe"></i>
          </span>
        </div>
      </div>

      <table id="list-notifications" class="table table-hover table-list">
        <% @user.workspace_invitations.each do |workspace_invitation| %>
          <tbody>
            <tr>
              <td class="list-image"><i class="icon-envelope"></i></td>
              <td>
                <span class="list-text"><%= "#{workspace_invitation.workspace.user.first_name} #{workspace_invitation.workspace.user.last_name} wants you to join to the workspace #{workspace_invitation.workspace.name}" %></span>
                <%= '<span class="minor">'.html_safe + ' On ' + ("#{workspace_invitation.created_at}").to_time.strftime("%B %d %Y %X") + '</span>'.html_safe %>
              </td>
              <td>
                <%= link_to '<i class="icon-ok icon-white"></i> Accept'.html_safe, workspace_invitation, :class => 'btn btn-mini btn-success' %>
                <%= link_to '<i class="icon-remove icon-white"></i> Reject'.html_safe, workspace_invitation, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>

    </div>

  </div>

</div>
