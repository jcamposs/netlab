<%= form_for(@user, :url => "/profiles/#{@user.id}", :html => { :class => 'form-horizontal'}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-error span7 offset4">
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid">

    <ul id="breadcrumb" class="breadcrumb wizard">
      <li><a href="/"><i class="icon-home"></i></a></li>
      <li><%= link_to 'Profile', profile_path(@user) %></li>
      <li class="active">Editing Profile</li>
    </ul>


    <div class="row-fluid container-widget">

      <div class="span5">

        <div class="tabbable tabbable-bordered">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab1" data-toggle="tab"><h4>Editing User</h4></a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab1">
              <div class="control-group">
                <%= f.label :first_name, :class => 'control-label' %>
                <div class="controls">
                  <%= f.text_field :first_name %>
                </div>
              </div>
              <div class="control-group">
                <%= f.label :last_name, :class => 'control-label' %>
                <div class="controls">
                  <%= f.text_field :last_name %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit :class => 'btn btn-primary' %>
        </div>
      </div>

    </div>

  </div>

<% end %>
